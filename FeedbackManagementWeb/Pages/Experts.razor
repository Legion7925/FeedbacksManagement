@page "/Experts"



<MudContainer MaxWidth="MaxWidth.False" Class="mt-5 mb-5">
    <MudFab Style="position:fixed;bottom:3%;left:2%;z-index:20;" Icon="@Icons.Material.Outlined.Add" Color="Color.Success" Size="Size.Medium" OnClick="AddExpert" />



    <MudTable Items="@expertList" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">

        <ToolBarContent>
            <MudText Typo="Typo.h6">متخصصین</MudText>
            <MudSpacer />
        </ToolBarContent>

        <HeaderContent>
            <MudTh>ردیف</MudTh>
            <MudTh>نام متخصص</MudTh>
            <MudTh>نام کاربری</MudTh>
            <MudTh>سطح دانشگاهی</MudTh>
            <MudTh>تخصص</MudTh>
            <MudTh>تاریخ عضویت</MudTh>
            <MudTh>عملیات</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="ردیف">@context.Id</MudTd>
            <MudTd DataLabel="نام متخصص">@context.FirstName @context.LastName</MudTd>
            <MudTd DataLabel="نام کاربری">@context.FirstName</MudTd>
            <MudTd DataLabel="سطح دانشگاهی">@context.EducationTranslate</MudTd>
            <MudTd DataLabel="تخصص">@context.FieldOfStudy</MudTd>
            <MudTd DataLabel="تاریخ عضویت">@context.CreatedFa</MudTd>
            <MudTd DataLabel="عملیات">
                <MudTooltip Text="ویرایش" Placement=Placement.Bottom>
                    <MudIconButton Icon="@Icons.Filled.Edit" Color="Color.Primary" OnClick="(()=> OpenEditExpertDialog(context))"></MudIconButton>
                </MudTooltip>
                <MudTooltip Text="حذف" Placement=Placement.Bottom>
                    <MudIconButton Icon="@Icons.Filled.Delete" Color="Color.Error" OnClick="(()=> DeleteExpert(context))"></MudIconButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>

