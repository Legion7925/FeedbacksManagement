@using FeedbackManagementWeb.Component
@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<PageTitle>مدیریت فیدبک</PageTitle>
<MudRTLProvider RightToLeft=true>
    <MudLayout>
        <MudAppBar>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" Edge="Edge.End"/>
            <MudIconButton Icon="@Icons.Material.Filled.Security" Color="Color.Inherit" Edge="Edge.End" />
            <MudIconButton Icon="@Icons.Material.Filled.Assignment" Color="Color.Inherit" Edge="Edge.End" />
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Edge="Edge.End"  />
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">مدیریت فیبدک</MudText>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            @Body
            <FooteerComponent></FooteerComponent>
        </MudMainContent>
    </MudLayout>

</MudRTLProvider>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}